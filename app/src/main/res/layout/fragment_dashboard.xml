<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bluegradient"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/mywebgradienttrans"
        android:orientation="vertical"
        android:padding="20dp"
        android:textColor="#ffffff">

        <TextView
            android:id="@+id/balance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingTop="20dp"
            android:text="Your Balance"
            android:textAllCaps="true"
            android:textColor="@color/thickTransparentWhite"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/balance_value_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance_value"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="N20,468"
                android:textColor="#ffffff"
                android:textSize="50sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top"

                android:layout_weight="2"
                android:background="@drawable/curvedbackground"
                android:foregroundGravity="top"
                android:gravity="top|center_horizontal"
                android:padding="5dp"
                android:text="468"
                android:textColor="#ffffff">


            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Power Useage"
                    android:textAllCaps="true"
                    android:textColor="@color/thickTransparentWhite"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="436Kw"
                    android:textColor="@color/plainWhite"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="expense"
                    android:textAllCaps="true"
                    android:textColor="@color/thickTransparentWhite"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="436Kw"
                    android:textColor="@color/plainWhite"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spinnerholder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp">

        <Spinner
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:id="@+id/date_spinner"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/default_time_frame">

        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:drawableLeft="@android:drawable/arrow_down_float"
            android:gravity="center_vertical"
            android:text=" billing"
            android:textAllCaps="true"
            android:textSize="13sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:drawableLeft="@android:drawable/arrow_up_float"
            android:gravity="center_vertical"
            android:text=" useage"
            android:textAllCaps="true"
            android:textSize="13sp" />

    </LinearLayout>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="170dp" />
