<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_welcome"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Welcome to EEDC Utility"
        android:textColor="#ffffff"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/text_desc_welcome"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="unlimited access to all EEDC utility from your finger tips"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/title_text"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_desc_welcome"
        android:layout_marginTop="61dp"
        app:srcCompat="@android:drawable/btn_star" />


</RelativeLayout>